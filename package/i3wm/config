# i3-gaps config file (v4).
#
# NOTICE: This configuration is intended for the i3-gaps fork of i3wm, see
# https://github.com/Airblader/i3.

# See http://i3wm.org/docs/userguide.html for documentation.

# TODO: Fix horribly inconsistent mode implementations.

set $mod Mod4
set $esc ctrl+bracketleft
set $promptchar "❯"

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
set $font_family ubuntu mono
font pango:$font_family 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# THEME

# Solarized.
set $base03  #002b36
set $base02  #073642
set $base01  #586e75
set $base00  #657b83
set $base0   #839496
set $base1   #93a1a1
set $base2   #eee8d5
set $base3   #fdf6e3
set $yellow  #b58900
set $orange  #cb4b16
set $red     #dc322f
set $magenta #d33682
set $violet  #6c71c4
set $blue    #268bd2
set $cyan    #2aa198
set $green   #859900

#class                  border  bg      text    indicator child_border
client.focused          $base03 $base02 $base1  $base01   $magenta
client.focused_inactive $base03 $base03 $base1  $base01   $cyan
client.unfocused        $base03 $base03 $base01 $cyan     $base03

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec \
    dmenu_run -i -b -l 5 -p $promptchar -fn "$font_family-8" \
        -nb "$base02" -nf "$base2" -sb "$base01" -sf "$base2"
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# change focus of parent
set $mode_focus "parent/child focus: [h][j][k][l]parent [p]arent [c]hild"
bindsym $mod+g mode $mode_focus
mode $mode_focus {
    bindsym $mod+h focus parent; focus left; focus child; mode "default"
    bindsym $mod+j focus parent; focus down; focus child; mode "default"
    bindsym $mod+k focus parent; focus up; focus child; mode "default"
    bindsym $mod+l focus parent; focus right; focus child; mode "default"
    bindsym $mod+p focus parent; mode "default"
    bindsym $mod+c focus child; mode "default"
    bindsym $esc mode "default"
}

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+Mod1+h split h

# split in vertical orientation
bindsym $mod+Mod1+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+n workspace next
bindsym $mod+p workspace prev
bindsym $mod+slash workspace back_and_forth
bindsym $mod+0 workspace 0:main
bindsym $mod+1 workspace 1:www
bindsym $mod+2 workspace 2:audio
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8:comm
bindsym $mod+9 workspace 9:monitor

# move focused container to workspace
bindsym $mod+Shift+0 move container to workspace 0:main
bindsym $mod+Shift+1 move container to workspace 1:www
bindsym $mod+Shift+2 move container to workspace 2:audio
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8:comm
bindsym $mod+Shift+9 move container to workspace 9:monitor

# move workspaces to different output
bindsym $mod+o focus output right
bindsym $mod+Shift+o move workspace to output right
bindsym $mod+Mod1+o mode "output"
bindsym $mod+Shift+Mod1+o exec "xrandr --output LVDS-1 --auto"
mode "output" {
    bindsym h focus output left
    bindsym h focus output right
    bindsym Shift+h move workspace to output left; mode "default"
    bindsym Shift+l move workspace to output right; mode "default"
    # FIXME These are not portable.
    # bindsym v exec "xrandr --output VGA-1 --auto --right-of LVDS-1"
    # bindsym d exec "xrandr --output HDMI1 --auto --right-of LVDS-1"
    # bindsym Shift+v exec "xrandr --output VGA-1 --off"
    bindsym $esc mode "default"
}

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
set $resize_sm 2
set $resize_lg 50

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
#       bindsym j resize shrink width $resize_lg px or $resize_lg ppt
#       bindsym k resize grow height $resize_lg px or $resize_lg ppt
#       bindsym l resize shrink height $resize_lg px or $resize_lg ppt
#       bindsym semicolon resize grow width $resize_lg px or $resize_lg ppt

        # same bindings, but for the arrow keys
        bindsym h resize shrink width $resize_sm px or $resize_sm ppt
        bindsym j resize grow height $resize_sm px or $resize_sm ppt
        bindsym k resize shrink height $resize_sm px or $resize_sm ppt
        bindsym l resize grow width $resize_sm px or $resize_sm ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym $esc mode "default"

        bindsym $mod+r resize set 650px 400px
}

bindsym $mod+r mode "resize"

# BAR
bar {
    status_command i3status
    mode dock
    position top
    tray_output primary
    tray_padding 0
    colors {
        background $base03
        statusline $base3
        separator  $base00

        #class             border  bg      text
        focused_workspace  $base0  $base03 $base3
        active_workspace   $base02 $base03 $base3
        inactive_workspace $base02 $base03 $base0
        urgent_workspace   $orange $base03 $orange
        binding_mode       $base02 $base03 $green
    }
}


set $home /home/analyticalnoa
set $keybinds /home/analyticalnoa/.dotfiles/package/i3wm/keybinds

# wallpaper
exec_always --no-startup-id feh --bg-fill $home/.wallpaper

# audio keybinds
bindsym XF86AudioRaiseVolume exec $keybinds audio_vol_up
bindsym XF86AudioLowerVolume exec $keybinds audio_vol_down
bindsym XF86AudioMute exec $keybinds audio_vol_mute
bindsym XF86AudioPrev exec sp prev
bindsym XF86AudioPlay exec sp play
bindsym XF86AudioPause exec sp play
bindsym XF86AudioNext exec sp next

set $mode_audio "audio: [h]prev [l]next [k]up [j]down [m]ute [space]play"
bindsym $mod+a mode $mode_audio
mode $mode_audio {
    bindsym XF86AudioRaiseVolume exec $keybinds audio_vol_up
    bindsym XF86AudioLowerVolume exec $keybinds audio_vol_down
    bindsym XF86AudioMute exec $keybinds audio_vol_mute
    bindsym XF86AudioPrev exec sp prev
    bindsym XF86AudioPlay exec sp play
    bindsym XF86AudioPause exec sp play
    bindsym XF86AudioNext exec sp next

    bindsym k exec $keybinds audio_vol_up
    bindsym j exec $keybinds audio_vol_down
    bindsym m exec $keybinds audio_vol_mute
    bindsym h exec sp prev
    bindsym space exec sp play
    bindsym l exec sp next

    bindsym $esc mode "default"
    bindsym Escape mode "default"
}


# lock
bindsym $mod+Mod1+l exec i3lock -dI 10 -ti $home/.wallpaperlock

# brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym Shift+XF86MonBrightnessUp exec xbacklight -set 100
bindsym Shift+XF86MonBrightnessDown exec xbacklight -set 0

# keyboard mappings
# FIXME: This broke at somepoint on machine02 for unknown reason.
exec_always --no-startup-id /usr/bin/setxkbmap -option caps:ctrl_modifier

# display
bindsym $mod+i exec xrandr-invert-colors
bindsym $mod+Shift+i mode "invert"
mode "invert" {
    bindsym 0 exec xrandr-invert-colors -s 0
    bindsym 1 exec xrandr-invert-colors -s 1
    bindsym $esc mode "default"
}

# autotiling
# exec_always --no-startup-id autotiling

# composition manager
exec --no-startup-id compton -b -CG

# border
set $default_border 1
set $base_gap 3
for_window [class=".*"] border pixel $default_border
gaps inner $base_gap
gaps outer $base_gap
bindsym $mod+Shift+b border normal; mode "border"
mode "border" {
    bindsym $esc border pixel $default_border; mode "default"
}

# mount shortcuts
bindsym $mod+Shift+m exec \
    i3-input -F 'exec udisksctl mount -b /dev/disk/by-label/%s' \
        -P "mount label: "

# Notifications.
set $mode_notify "notify: [e]nable [d]isable"
bindsym $mod+Shift+n mode $mode_notify
mode $mode_notify {
    # Enable dunst.
    bindsym e exec killall -SIGUSR2 dunst; mode "default"
    # Pause dunst.
    bindsym d exec killall -SIGUSR1 dunst; mode "default"

    bindsym $esc mode "default"
}

# SCREENSHOT
bindsym --release $mod+c \
    exec "import png:- | xclip -selection clipboard -t image/png"

# xflux
exec_always $home/.dotfiles/share/start-xflux.sh
