cpu_usage {
        format = "%usage"
}

wireless _first_ {
        format_up = "W: (%quality %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

